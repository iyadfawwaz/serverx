<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/shapeme"
            android:padding="4dp"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

            <TextView
                android:textColor="@color/teal_700" android:id="@+id/textView" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="serif-monospace"/>
            <EditText android:id="@+id/ip" android:background="@color/white" android:padding="3dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:hint="عنوان ip" android:ems="10" android:inputType="textPersonName" android:fontFamily="monospace"/>
            <EditText android:id="@+id/admin" android:background="@color/white" android:padding="7dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="4dp" android:hint="المستخدم" android:ems="10" android:inputType="textPersonName" android:fontFamily="monospace"/>
            <EditText android:id="@+id/password" android:background="@color/white" android:padding="7dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="4dp" android:hint="كلمة المرور" android:ems="10" android:inputType="textPersonName" android:fontFamily="monospace"/>
            <Button android:textColor="@color/white" android:id="@+id/connect" android:background="@color/teal_200" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:layout_marginLeft="17dp" android:layout_marginRight="17dp" android:text="دخول" android:fontFamily="casual"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
